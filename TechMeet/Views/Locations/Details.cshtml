@model TechMeet.DATA.EF.Location

@{
    ViewBag.Title = $"Store Number: {Model.StoreNumber} in {Model.City}";
}

<div class="paper space">
    <h2 class="spaceup">@ViewBag.Title</h2>

    <div>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.StoreNumber)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.StoreNumber)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.City)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.City)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.State)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.State)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.UserDetail.UserName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.UserDetail.UserName)
            </dd>

        </dl>
    </div>
    <p>
        @if (User.IsInRole("Admin"))
        {
            @Html.ActionLink("Edit", "Edit", new { id = Model.LocationId }, new { @class="btn brows-btn admin-btn" })
        }
        <br />
        <br />
        @Html.ActionLink("Back to Main", "Index")
    </p>
</div>