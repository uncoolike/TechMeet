@model TechMeet.DATA.EF.OpenPosition

@{
    ViewBag.Title = "Create New Available Position";
}
<div class="paper space" style="width:60%;">
    <h2 class="spaceup">@ViewBag.Title</h2>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.PoisitionId, "Poisition", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-4 col-md-offset-2">
                    @Html.DropDownList("PoisitionId", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.PoisitionId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.LocationId, "Store Number", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-4 col-md-offset-2">
                    @Html.DropDownList("LocationId", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.LocationId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-8">
                    <input type="submit" value="Create" class="btn brows-btn" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to Main", "Index")
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
