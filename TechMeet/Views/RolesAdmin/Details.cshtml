@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole

@{
    ViewBag.Title = $"{Model.Name}";
}

<div class="paper space">
    <h2 class="spaceup">@ViewBag.Title</h2>

    <h5 class="spaceup">Users In Role</h5>
    @if (ViewBag.UserCount == 0)
    {
        <p>No users in this role</p>
    }

    <table class="table">

        @foreach (var item in ViewBag.Users)
        {
            <tr>
                <td>
                    @item.UserName
                </td>
            </tr>
        }
    </table>
    <p>
        @if (User.IsInRole("Admin"))
        {
            @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn brows-btn admin-btn" })
        }
        <br />
        <br />
        @Html.ActionLink("Back to Main", "Index")
    </p>
</div>


