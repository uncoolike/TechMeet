@model TechMeet.DATA.EF.Application

@{
    ViewBag.Title = $"Delete {Model.UserDetail.UserName}'s application?";
}
<div class="paper space" style="width:50%;">
    <h2 class="spaceup">@ViewBag.Title</h2>

    <h3 class="text-danger">Are you absolutely sure?</h3>
    <div>
        @Html.HiddenFor(x => x.ApplicationId)
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.UserDetail.UserName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.UserDetail.UserName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.ApplicationDate)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ApplicationDate)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.ResumeFilename)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ResumeFilename)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.ApplicationStatu.StatusName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ApplicationStatu.StatusName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.ManagerNotes)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ManagerNotes)
            </dd>
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-danger admin-btn" />
                <br />
                <br />
                @Html.ActionLink("Back to Main", "Index")
            </div>
        }
    </div>
</div>
